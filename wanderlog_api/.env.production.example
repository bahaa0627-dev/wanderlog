# ========================================
# 生产环境配置模板
# ========================================

PORT=3000

# Supabase PostgreSQL (使用 Pooler 连接)
DATABASE_URL="postgresql://postgres.YOUR_PROJECT_REF:YOUR_PASSWORD@aws-1-ap-southeast-1.pooler.supabase.com:5432/postgres"
DIRECT_URL="postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT_REF.supabase.co:5432/postgres"

# JWT 密钥 (生产环境请使用强密钥)
JWT_SECRET="your-production-secret-key-at-least-32-chars"

# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Resend Email Service
RESEND_API_KEY=your_resend_api_key
RESEND_FROM_EMAIL="WanderLog <noreply@yourdomain.com>"
RESEND_REPLY_TO_EMAIL=support@yourdomain.com

# Apify API (可选)
APIFY_API_TOKEN=your_apify_token
APIFY_ACTOR_ID=your_actor_id

# AI Keys (可选)
OPENAI_API_KEY=your_openai_key
GEMINI_API_KEY=your_gemini_key
PREFERRED_AI_MODEL=OPENAI_API_KEY

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Supabase
SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# Cloudflare R2
R2_PUBLIC_URL=https://your-r2-worker.workers.dev
R2_UPLOAD_SECRET=your_r2_secret
