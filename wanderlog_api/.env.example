# Database
DATABASE_URL="file:./dev.db"

# JWT
JWT_SECRET="your_jwt_secret_here_change_in_production"
JWT_ACCESS_EXPIRY=15m      # Access Token 过期时间（15分钟）
JWT_REFRESH_EXPIRY=7d      # Refresh Token 过期时间（7天）

# Google Maps API
GOOGLE_MAPS_API_KEY="your_google_maps_api_key_here"

# ========================================
# Resend Email Service (邮箱验证)
# ========================================
# 注册地址：https://resend.com/signup
# 获取 API Key: https://resend.com/api-keys
# 
# 开发环境：使用 onboarding@resend.dev (只能发送到你自己的邮箱)
# 生产环境：需要验证自己的域名后使用 noreply@yourdomain.com
RESEND_API_KEY=re_your_api_key_here
RESEND_FROM_EMAIL=WanderLog <onboarding@resend.dev>
RESEND_REPLY_TO_EMAIL=support@wanderlog.com

# ========================================
# Google OAuth 2.0 (Google 登录)
# ========================================
# 获取方法：https://console.cloud.google.com
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Server
PORT=3000
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:3000"

# ========================================
# Supabase (云端数据库)
# ========================================
# 获取方法：https://supabase.com/dashboard
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ========================================
# Cloudflare R2 (图片存储)
# ========================================
# 获取方法：https://dash.cloudflare.com → R2
R2_ACCOUNT_ID=your-account-id
R2_ACCESS_KEY_ID=your-access-key
R2_SECRET_ACCESS_KEY=your-secret-key
R2_BUCKET_NAME=wanderlog-images
R2_PUBLIC_URL=https://images.wanderlog.app
R2_UPLOAD_SECRET=your-upload-secret-for-worker
