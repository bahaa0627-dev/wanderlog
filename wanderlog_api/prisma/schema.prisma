// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String?
  name      String?
  avatarUrl String?
  authProvider    String    @default("email")
  googleId        String?   @unique
  isEmailVerified Boolean   @default(false)
  emailVerifiedAt DateTime?
  refreshToken    String?
  tokenVersion    Int       @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  trips              Trip[]
  verificationTokens VerificationToken[]
  userCollections    UserCollection[]

  @@index([email])
  @@index([googleId])
}

model VerificationToken {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  token       String    @unique
  type        String
  expiresAt   DateTime
  usedAt      DateTime?
  createdAt   DateTime  @default(now())

  @@index([token])
  @@index([userId, type])
  @@index([expiresAt])
}

// 单一地点表 Place（合并原 Spot 与 PublicPlace）
model Place {
  id            String   @id @default(cuid())
  name          String
  city          String?
  country       String?
  latitude      Float
  longitude     Float
  address       String?
  description   String?
  openingHours  String?
  rating        Float?
  ratingCount   Int?
  category      String?
  aiSummary     String?
  aiDescription String?
  tags          String?   // JSON string
  aiTags        String?   // JSON string
  coverImage    String?
  images        String?   // JSON string
  priceLevel    Int?
  website       String?
  phoneNumber   String?
  googlePlaceId String?   @unique
  placeId       String?   // 兼容旧 publicPlace 的 placeId；可与 googlePlaceId 复用
  source        String?   @default("google_maps")
  sourceDetails String?
  isVerified    Boolean   @default(false)
  lastSyncedAt  DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  customFields  String?

  tripSpots       TripSpot[]
  collectionSpots CollectionSpot[]

  @@index([city])
  @@index([category])
  @@index([rating])
  @@index([source])
}

model Trip {
  id         String     @id @default(cuid())
  userId     String
  user       User       @relation(fields: [userId], references: [id])
  name       String
  city       String?
  startDate  DateTime?
  endDate    DateTime?
  coverImage String?
  status     String     @default("PLANNING")
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  tripSpots  TripSpot[]
}

model TripSpot {
  id         String    @id @default(cuid())
  tripId     String
  trip       Trip      @relation(fields: [tripId], references: [id])
  placeId    String
  place      Place     @relation(fields: [placeId], references: [id])
  status     String    @default("WISHLIST")
  priority   String    @default("OPTIONAL")
  visitDate  DateTime?
  userRating Int?
  userNotes  String?
  userPhotos String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@unique([tripId, placeId])
}

model Collection {
  id          String   @id @default(cuid())
  name        String
  coverImage  String
  description String?
  people      String?
  works       String?
  source      String?
  isPublished Boolean  @default(false)
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  collectionSpots CollectionSpot[]
  userCollections UserCollection[]
}

model CollectionSpot {
  id           String      @id @default(cuid())
  collectionId String
  collection   Collection  @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  placeId      String
  place        Place       @relation(fields: [placeId], references: [id], onDelete: Cascade)
  city         String?
  createdAt    DateTime    @default(now())

  @@unique([collectionId, placeId])
  @@index([city])
}

model UserCollection {
  id           String      @id @default(cuid())
  userId       String
  user         User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  collectionId String
  collection   Collection  @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  createdAt    DateTime    @default(now())

  @@unique([userId, collectionId])
}
